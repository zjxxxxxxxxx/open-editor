{
  "private": true,
  "name": "@open-editor/monorepo",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@7.29.3",
  "scripts": {
    "build": "concurrently --success all -r -m 1 'turbo run build --filter @open-editor/* --log-order grouped'",
    "clean": "rimraf -g '{packages/**/.turbo,node_modules/.cache}'",
    "dev": "turbo run dev --filter @open-editor/* --log-order grouped",
    "dev:watch": "turbo run dev:watch --filter @open-editor/* --log-order stream",
    "play": "esno scripts/play.ts",
    "lint": "pnpm eslint . --ext .ts,.tsx",
    "lint:ci": "pnpm lint --ignore-pattern='/playgrounds/*'",
    "format": "prettier --write '**/*.{ts,tsx,md}'",
    "install:ci": "pnpm --filter @open-editor/* install",
    "install:hook": "simple-git-hooks",
    "postinstall": "pnpm install:hook",
    "release": "pnpm build && changeset publish",
    "typecheck": "tsc --noEmit",
    "update": "changeset version && pnpm format"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.0",
    "consola": "^3.2.3",
    "enquirer": "^2.3.6",
    "eslint": "^8.45.0",
    "esno": "^0.17.0",
    "fast-glob": "^3.3.1",
    "lint-staged": "^13.2.3",
    "minimist": "^1.2.8",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.1",
    "turbo": "^1.10.11",
    "typescript": "^5.1.6"
  },
  "simple-git-hooks": {
    "lint-staged": {
      "*": [
        "pnpm format"
      ],
      "packages/*/src/**/*.ts": [
        "eslint --cache --fix"
      ],
      "packages/**/*.d.ts": [
        "eslint --cache --fix"
      ]
    }
  }
}
