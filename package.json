{
  "private": true,
  "name": "@open-editor/monorepo",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "concurrently --success all -r -m 1 'turbo run build --filter @open-editor/* --log-order grouped'",
    "clean": "rimraf -g '{packages/**/.turbo,node_modules/.cache}'",
    "dev": "turbo run dev --filter @open-editor/* --log-order grouped",
    "dev:watch": "turbo run dev:watch --filter @open-editor/* --log-order stream",
    "play": "pnpm --filter playground dev",
    "lint": "pnpm eslint . --ext .ts,.tsx",
    "lint:ci": "pnpm lint --ignore-pattern='/playground/*'",
    "format": "prettier --write '**/*.{ts,tsx,md}'",
    "install:ci": "pnpm --no-frozen-lockfile --filter @open-editor/* install",
    "postinstall": "simple-git-hooks",
    "release": "pnpm build && changeset publish",
    "typecheck": "tsc --noEmit && turbo run typecheck",
    "update-versions": "changeset version && pnpm format"
  },
  "engines": {
    "node": ">=16.19.1"
  },
  "packageManager": "pnpm@8.6.11",
  "keywords": [
    "open-editor",
    "devtools",
    "vite-plugin",
    "webpack-plugin"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@open-editor/client": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.0",
    "consola": "^3.2.3",
    "cross-env": "^7.0.3",
    "enquirer": "^2.4.1",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.47.0",
    "esno": "^0.17.0",
    "fast-glob": "^3.3.1",
    "lint-staged": "^13.3.0",
    "minimist": "^1.2.8",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0",
    "rollup-plugin-dts": "^5.3.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "pnpm format"
    ],
    "packages/*/src/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  }
}
