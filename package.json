{
  "private": true,
  "name": "@open-editor/monorepo",
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ],
  "type": "module",
  "description": "ðŸš€ A web devtools for fast find source code.",
  "scripts": {
    "build": "concurrently --success all -r -m 1 'turbo run build --filter @open-editor/* --log-order grouped'",
    "clean": "rimraf -g {.turbo,packages/**/.turbo,node_modules/.cache}",
    "dev": "turbo run dev --filter @open-editor/* --log-order stream",
    "start": "esno scripts/start.ts",
    "play": "pnpm start --script dev",
    "demo": "pnpm play --playground vite-react",
    "lint": "pnpm eslint . --ext .ts,.tsx --ignore-pattern '/playground/*'",
    "format": "prettier --write '**/*.{vue,ts,tsx,json,md}'",
    "postinstall": "simple-git-hooks",
    "release": "run-s build publish:ci",
    "test": "turbo run test",
    "check": "tsc --noEmit && turbo run check --filter @open-editor/* --log-order grouped",
    "install:ci": "pnpm install --ignore-scripts",
    "versions": "run-s version:ci format",
    "version:ci": "changeset version",
    "publish:ci": "changeset publish"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "open-editor",
    "rollup-plugin",
    "vite-plugin",
    "webpack-plugin",
    "nextjs-devtools",
    "react-devtools",
    "nuxt-devtools",
    "vue-devtools",
    "web-devtools",
    "devtools"
  ],
  "author": "zjxxxxxxxxx <954270063@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.24",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.4.0",
    "autoprefixer": "^10.4.16",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.0",
    "consola": "^3.2.3",
    "enquirer": "^2.4.1",
    "eslint": "^8.57.1",
    "esno": "^4.8.0",
    "fast-glob": "^3.3.1",
    "lint-staged": "^13.3.0",
    "magic-string": "^0.30.14",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-discard-comments": "^7.0.3",
    "postcss-minify-selectors": "^6.0.4",
    "prettier": "^3.4.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.5",
    "rollup-plugin-dts": "^5.3.1",
    "rollup-plugin-swc3": "^0.12.1",
    "simple-git-hooks": "^2.9.0",
    "turbo": "^2.5.3",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
