{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install dependencies",
      "command": "pnpm install:ci"
    },
    {
      "name": "Build packages",
      "command": "pnpm build"
